pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Brozzor/ynov-eval-core-api-java.git'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew clean build test publish'
            }
            post {
                always {
                    archiveArtifacts 'build/libs/*.jar'
                }
            }
        }
    }
}